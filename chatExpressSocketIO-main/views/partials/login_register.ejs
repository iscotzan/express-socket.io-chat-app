<div class="row">
    <div class="col-md-6 col-md-offset-3" id="loginRegisterDiv">
        <div class="panel panel-login">
            <div class="panel-heading">
                <!--<div class="row">-->
                    <div class="col-xs-6">
                        <button href="#" class="btn btn-login active hvr-bob" id="login-form-link">Login</button>
                    </div>
                    <div class="col-xs-6">
                        <button href="#" class="btn btn-register hvr-bob" id="register-form-link">Register</button>
                    </div>
                <!--</div>-->
                <hr>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <form id="login-form" method="post" role="form" style="display: block;">
                            <div class="form-group">
                                <input type="text" name="u_log_email" id="u_email" tabindex="1" class="form-control" placeholder="Username" value="" autofocus>
                            </div>
                            <div class="form-group">
                                <input type="password" name="u_log_password" id="u_password" tabindex="2" class="form-control" placeholder="Password">
                            </div>
                            <div class="form-group text-center">
                                <label> Remember Me</label>
                                <div class="squaredOne">
                                     <input type="checkbox" tabindex="3" checked="checked" class="" value="None" name="remember" id="remember">
                                    <label for="remember"></label>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-6 col-sm-offset-3">
                                        <input type="button" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-warning" value="Chat Away">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="text-center">
                                            <a href="#modalResetPassword" data-toggle="modal" tabindex="5" class="forgot-password">Forgot Password?</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <form id="register-form" method="post" role="form" style="display: none;">
                            <div class="form-group">
                                <input type="text" name="u_username" id="username" tabindex="1" class="form-control" placeholder="Username" value="">
                            </div>
                            <div class="form-group">
                                <input type="email" name="u_email" id="emailreg" tabindex="1" class="form-control" placeholder="Email Address" value="">
                            </div>
                            <div class="form-group">
                                <input type="password" name="u_password" id="password" tabindex="2" class="form-control" placeholder="Password">
                            </div>
                            <div class="form-group">
                                <input type="password" id="confirm-password" tabindex="2" class="form-control" placeholder="Confirm Password">
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-6 col-sm-offset-3">
                                        <input type="button" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-register" value="Register Now">
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>